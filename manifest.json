{
	"manifest_version": 2,
	"name": "crxhyw",
	"version": "1.0",
	"description": "插件测试",
	"author": "hywmickey",
	"icons":
	{
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"browser_action": 
	{
		"default_icon": "img/icon128.png",
		"default_title" : "hyw的插件",
		"default_popup": "html/popup.html"
	},
	"background":
	{
		"scripts": ["js/background.js"]
	},

	"content_scripts":
	[
		{
			"matches": ["<all_urls>"],
			"js":["js/contentScript.js"],
			"run_at": "document_end"
		}
	],
	"permissions":
	[
		"contextMenus",
		"storage"
	],

	"chrome_url_overrides":
    {
        "newtab": "/html/newtab.html"
    },
	"options_ui": {
		"page": "/html/options.html",
		"open_in_tab": false
	  }


}